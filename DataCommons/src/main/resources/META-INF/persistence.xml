<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com.xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="datacommons">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>au.edu.anu.datacommons.collectionrequest.CollectionRequest</class>
		<class>au.edu.anu.datacommons.collectionrequest.CollectionRequestItem</class>
		<class>au.edu.anu.datacommons.collectionrequest.CollectionRequestAnswer</class>
		<class>au.edu.anu.datacommons.collectionrequest.CollectionRequestStatus</class>
		<class>au.edu.anu.datacommons.collectionrequest.CollectionDropbox</class>
		<class>au.edu.anu.datacommons.collectionrequest.CollectionDropboxAccessLog</class>
		<class>au.edu.anu.datacommons.collectionrequest.Question</class>
		<class>au.edu.anu.datacommons.collectionrequest.QuestionMap</class>
		<properties>
			<property name="show_sql" value="true" />
			<property name="dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
		</properties>
	</persistence-unit>
</persistence>
