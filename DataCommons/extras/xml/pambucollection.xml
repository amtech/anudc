<?xml version="1.0" encoding="UTF-8" ?>
<template>
	<name>PAMBU Microfilm Collection Template</name>
	<briefDesc>Template for creating PAMBU Microfilm Records</briefDesc>
	<tab name="general" label="General" order="1" />
	<tab name="description" label="Description" order="2" />
	<tab name="coverage" label="Coverage" tooltip="Dates and Locations relating to collection" order="3" />
	<tab name="contact" label="Contact" tooltip="Information about contact(s)" order="4" />
	<tab name="subject" label="Subject" order="5" />
	<tab name="rights" label="Rights" order="6" />
	<tab name="publications" label="Publications" order="7" />
	<item name="type" label="Type" fieldType="TextField" saveType="single" defaultValue="Collection" readonly="readonly" editPerm="admin" tab="general" />
	<item name="subType" label="Collection Type" fieldType="Combobox" saveType="single" class="required" tab="general">
		<option value="" label="-No Value Selected-" />
		<option value="dataset" label="Dataset" />
		<option value="catalogueOrIndex" label="Catalogue or Index" />
		<option value="collection" label="Collection" />
		<option value="registry" label="Registry" />
		<option value="repository" label="Repository" />
	</item>
	<item name="ownerGroup" label="Owner Group" fieldType="Combobox" saveType="single" class="required" tab="general">
		<option value="" label="-No Value Selected-" />
		<option value="1" label="Administrator" />
	</item>
	<item name="name" label="Title" fieldType="TextField" saveType="single" maxLength="80" class="required" tab="general" />
	<item name="abbrName" label="Abbreviated Title" fieldType="TextField" saveType="single" maxLength="255" tab="general" />
	<item name="altName" label="Alternate Title" fieldType="TextField" saveType="single" maxLength="255" tab="general" />
	<item name="externalId" label="PAMBU ID" fieldType="TextField" saveType="single" tab="general" />
	<item name="coverageDates" label="Coverage Dates" fieldType="Table" saveType="table" tab="coverage">
		<column name="dateFrom" label="Date From" fieldType="TextField" class="date" />
		<column name="dateTo" label="Date To" fieldType="TextField" class="date" />
	</item>
	<item name="numReels" label="Number of Reels" fieldType="TextField" saveType="single"/>
	<item name="format" label="Format" fieldType="TextField" saveType="single" />
	<item name="holdingType" label="PAMBU Holding Type" fieldType="Combobox" saveType="single" class="required">
		<option value="" label="-No Value Selected-" />
		<option value="ms" label="Manuscript Series" />
		<option value="doc" label="Printed Document Series" />
	</item>
	<item name="briefDesc" label="Brief Description" fieldType="TextArea" saveType="single" maxLength="4000" class="required" tab="description" />
	<item name="fullDesc" label="Full Description" fieldType="TextArea" saveType="single" maxLength="4000" tab="description" />
	<item name="holdingLocation" label="Holding" fieldType="TextField" saveType="single" />
	<item name="serialNum" label="Serial Number" fieldType="TextField" saveType="single" />
	<item name="digital" label="Digitized" fieldType="Combobox" saveType="single">
		<option value="NO" label="No" />
		<option value="YES" label="Yes" />
	</item>
	<item name="sortVal" label="Sort Value" fieldType="TextField" saveType="single" class="number" />
	<item name="significanceStatement" label="Significance Statement" fieldType="TextArea" saveType="single" maxLength="4000" tab="description" />
	<item name="email" label="Contact Email" fieldType="TextFieldMulti" saveType="multiple" class="required email" tab="contact" />
	<item name="postalAddress" label="Contact Address" fieldType="TextArea" saveType="single" tab="contact" />
	<item name="phone" label="Contact Phone Number" fieldType="TextFieldMulti" saveType="multiple" tab="contact" />
	<item name="fax" label="Contact Fax Number" fieldType="TextFieldMulti"  saveType="multiple" tab="contact" />
	<item name="websiteAddress" label="Website Address" fieldType="TextFieldMulti" saveType="multiple" tab="contact" />
	<item name="anzforSubject" label="ANZSRC-FOR Subject" fieldType="ComboBoxMulti" saveType="multiple" class="required" tab="subject">
		<option value="" label="-No Value Selected-" />
	</item>
	<item name="locSubject" label="Other Subject" fieldType="TextFieldMulti" saveType="multiple" tab="subject" />
	
	<item name="coverageArea" label="Coverage Area" fieldType="Table" saveType="table" tab="coverage">
		<column name="covAreaType" label="Type" fieldType="Combobox">
			<option value="" label="-No Value Selected-" />
			<option value="text" label="Text" />
			<option value="gml" label="OpenGIS Geography Markup Language (GML) Encoding Standard" />
		</column>
		<column name="covAreaValue" label="Location" fieldType="TextField" />
	</item>
	<item name="publication" label="Publications" fieldType="TableVertical" saveType="table" tab="publications">
		<column name="pubType" label="Publication Type" fieldType="Combobox">
			<option value="" label="-No Value Selected-" />
			<option value="doi" label="Digital Object Identifier" />
			<option value="issn" label="International Standard Serial Number" />
			<option value="isbn" label="International Standard Book Number" />
		</column>
		<column name="pubValue" label="Publication Value" fieldType="TextField" />
		<column name="pubTitle" label="Publication Title" fieldType="TextArea" />
	</item>
	<item name="rightsStatement" label="Rights Statement" fieldType="TextArea" saveType="single" tooltip="Intellectual property rights information" tab="rights" />
	<item name="licenceType" label="Licence Type" fieldType="Combobox" saveType="single" tooltip="Licence Type" tab="rights" >
		<option value="" label="-No Value Selected-" />
		<option value="CC-BY" label="Attribution" />
		<option value="CC-BY-SA" label="Attribution-SharedAlice" />
		<option value="CC-BY-ND" label="Attribution-NoDervis" />
		<option value="CC-BY-NC" label="Attribution-NonCommercial" />
		<option value="CC-BY-NC-SA" label="Attribution-NonCommercial-SharedAlike" />
		<option value="CC-BY-NC-ND" label="Attribution-NonCommercial-NoDervis" />
		<option value="GPL" label="General Public Licence" />
		<option value="AusGoalRestrictive" label="AusGoal Restrictive Licence" />
		<option value="NoLicence" label="No licence" />
		<option value="Unknown/Other" label="Unknown licence or record provider defined licence" />
	</item>
	<item name="licence" label="Licence" fieldType="TextArea" saveType="single" tooltip="Licence Information" tab="rights" />
	<item name="accessRights" label="Access Rights" fieldType="TextArea" saveType="single" tooltip="Information about who and when people may access the information in this collection" tab="rights" />
	
</template>